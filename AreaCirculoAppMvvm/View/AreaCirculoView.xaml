<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AreaCirculoAppMvvm.View.AreaCirculoView"
             
    <VerticalStackLayout Spacing="15" Padding="20">
        <Label 
            Text="Area Del Circulo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="30" FontAttributes="Bold" />

    <Label Text="Ingrese el Radio" FontSize="18" FontAttributes="Bold"/>
    <Entry Text="" Keyboard="Numeric"/>

    <Label Text="Area del circulo : " FontSize="18" FontAttributes="Bold"/>
    <Entry Text="" Keyboard="Numeric" IsReadOnly="True" />


    <Grid RowDefinitions="*" ColumnDefinitions="*,*">
        <Button Text="Calcular" FontSize="18" FontAttributes="Bold" Background="CadetBlue" Grid.Column="0"/>
        <Button Text="Limpiar" FontSize="18" FontAttributes="Bold" Background="DarkRed" Grid.Column="1"/>
    </Grid>


    </VerticalStackLayout>
</ContentPage>